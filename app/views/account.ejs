  <script>
    function viewResource(filename) {
      const userId = "<%= profile.id %>";
      const targetUrl = `/myaccount/resource/${filename}`;
      fetch(targetUrl, {
        method: 'GET',
        headers: {
          'X-User-ID': userId
        }
      })
        .then(response => {
          if (response.ok) {

            window.open(targetUrl, '_blank');
          } else {
            alert("Gagal memicu : " + response.statusText);
          }
        })
        .catch(err => alert("Error: " + err.message));
    }
  </script>
